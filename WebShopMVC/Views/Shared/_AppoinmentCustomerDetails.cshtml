@model WebShopMVC.Models.Appointments
 



<h4 class="text-success">
    Appoinment Details
</h4>

<div class="container border" style="height:100px ; background-color:aliceblue">
    <div class="col-12">
        <div class="row" style="padding-top:10px;">
            <div class="col-2">
                Full Name
            </div>
            <div class="col-3">
                <input asp-for="@Model.CustomerName" readonly class="form-control"/>
            </div>
            <div class="col-2">
                Email
            </div>
            <div class="col-3">
                <input asp-for="@Model.CustomerEmail" readonly class="form-control"/>
            </div>
        </div>
    </div>
     <div class="col-12">
        <div class="row" style="padding-top:10px;">
            <div class="col-2">
                PhoneNumber
            </div>
            <div class="col-3">
                <input asp-for="@Model.CustomerPhoneNumber" readonly class="form-control"/>
            </div>
            <div class="col-2">
                Appointment Date
            </div>
            <div class="col-3">
                <input asp-for="@Model.AppointmentDate" readonly class="form-control"/>
            </div>
        </div>
    </div>
</div>