@{
    ViewData["Title"] = "Home Page";
}

@model List<Products>


<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>
                        <label style="font-size:23px;color:steelblue;">@item.Name</label>
                    </h4>
                </div>

                <img class="card-img-top" style="height:100%" src="@item.Image" alt="Card Image"/>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px;color:#a51313;padding-right:7px;padding-left:7px;"><b>@item.Price</b></label>
                            <a asp-action="Details" asp-controller="Home" class="btn btn-primary pull-right btn-outline-info" asp-route-id="@item.Id">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>